<HelloScreen>:
    name: "hello"
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1  # Green background
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 400  # Fixed layout size

            # Logo Section (Independent of Layout)
            AnchorLayout:
                size_hint_y: None
                height: 200  # Adjust height as needed

                Image:
                    source: 'logo.png'  # Replace with your logo image path
                    size_hint: None, None
                    size: 200,200  # Adjust size as needed
                    allow_stretch: True
                    keep_ratio: True

            # App Name Section
            Label:
                text: "Your Music"
                font_size: '24sp'
                bold: True
                size_hint_y: None
                height: 180 # Fixed height for label

            # Start Button Section
            Button:
                text: "Start"
                font_name: "Roboto-Bold.ttf"
                size_hint_y: None
                size_hint_x:0.9
                height: 40
                on_release:
                    app.root.current="next"


<NextScreen>:
    name: "next"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "im page 2"
            halign: "center"
        Button:
            text: "third"
            halign: "center"
            on_release:
                app.root.current = "third"
   
<ThirdScreen>:
    name:"third"
    
    BoxLayout:
